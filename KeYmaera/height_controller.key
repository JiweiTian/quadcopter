\functions{
        /* immutable parameters to system */
        R d;
}

\programVariables{
        /* state variable declarations */
        R h;
        R t;
        R v;
}

\problem{
        /* initial state */
        (v = 1 | v = -1) &
        (-d <= h & h <= d) &
        (t = 0) /*&
        d > 0*/
        ->
        /* system dynamics */
        \[[(
                (?(h <  0); {h' = v, t' = 1, t <= d}; v :=  1; t := 0) ++
                (?(h >= 0); {h' = v, t' = 1, t <= d}; v := -1; t := 0)
        )* /* nondet. rep. */ \]]g
        /* postcondition */
        (-2*d <= h & h <= 2*d)
}
